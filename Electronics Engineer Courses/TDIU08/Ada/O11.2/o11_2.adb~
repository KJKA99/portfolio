-- kebje541: Sammarbetat med jambe108, James Beise, samma program
with Ada.Text_IO; use Ada.Text_IO;
with Ada.Command_Line; use Ada.Command_Line;

procedure Mitt_Program is
begin
   
   
   
if Argument_Count = 3 then
   if Command_Name = Argument(1) or else Command_Name(1..Command_Name'Length) = Argument(1) then
      Put_Line("Error! Input file """ & Argument(1) & """ cannot be the same as the program itself!");
   elsif Command_Name = Argument(2) or else Command_Name(1..Command_Name'Length) = Argument(2) then
      Put_Line("Error! Output file """ & Argument(2) & """ cannot be the same as the program itself!");
   elsif Argument(1) = Argument(2) or else
      (Argument(1) = Argument(2)(3..Argument(2)'Length) and Argument(2)(1..2) = "./") or else
      (Argument(2) = Argument(1)(3..Argument(1)'Length) and Argument(1)(1..2) = "./") then
      Put_Line("Error! Output file """ & Argument(2) & """ cannot be the same as input file!");
      
	 
	Put("Meddelande: ");
	for I in 1..(Integer'Value(Argument(3))) loop
	   Put(Argument(1));
	end loop;
	Put(Argument(2));
	New_Line;
	Put("Programmet """ & Command_Name  &""" avslutas.");
      end if;
   elsif Argument_Count = 0 then
      Put("Inga argument angivna.");
   else
      Put("Fel antal argument angivna.");
   end if;
   
end Mitt_Program;
